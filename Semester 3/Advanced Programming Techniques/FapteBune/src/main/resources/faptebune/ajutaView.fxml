<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="faptebune.controllers.AjutaController">
    <children>
        <TabPane layoutX="14.0" layoutY="79.0" prefHeight="350.0" prefWidth="770.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Doresc sa ajut!">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="310.0" prefWidth="770.0">
                            <children>
                                <TableView fx:id="nevoiTable" layoutX="7.0" layoutY="11.0" prefHeight="250.0"
                                           prefWidth="500.0">
                                    <columns>
                                        <TableColumn fx:id="titluNevoieColumn" prefWidth="70.0" text="Titlu"/>
                                        <TableColumn fx:id="descriereNevoieColumn" prefWidth="90.0" text="Descriere"/>
                                        <TableColumn fx:id="deadlineNevoieColumn" prefWidth="79.0" text="Deadline"/>
                                        <TableColumn fx:id="statusNevoieColumn" text="Status"/>
                                        <TableColumn fx:id="omInNevoieNevoieColumn" prefWidth="99.0" text="OmInNevoie"/>
                                        <TableColumn fx:id="omSalvatorNevoieColumn" prefWidth="81.0" text="OmSalvator"/>
                                    </columns>
                                </TableView>
                                <TableView fx:id="nevoieRezolvateTable" layoutX="513.0" layoutY="11.0"
                                           prefHeight="300.0" prefWidth="250.0">
                                    <columns>
                                        <TableColumn fx:id="titluRezolvatColumn" prefWidth="75.0" text="Titlu"/>
                                        <TableColumn fx:id="deadlineRezolvatColumn" minWidth="0.0" prefWidth="85.0"
                                                     text="Deadline"/>
                                        <TableColumn fx:id="omInNevoieRezolvatColumn" minWidth="0.0" prefWidth="88.0"
                                                     text="OmInNevoie"/>
                                    </columns>
                                </TableView>
                                <Button fx:id="rezolvaButton" layoutX="192.0" layoutY="272.0" mnemonicParsing="false"
                                        onAction="#rezolvaNevoie" prefHeight="40.0" prefWidth="130.0"
                                        text="Rezolva nevoie"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Doresc sa fiu ajutat!">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="22.0" prefHeight="30.0" prefWidth="35.0" text="Titlu:">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="14.0" layoutY="52.0" prefHeight="30.0" prefWidth="77.0"
                                       text="Descriere:">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="14.0" layoutY="82.0" prefHeight="30.0" prefWidth="69.0"
                                       text="Deadline:">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="titluTextField" layoutX="53.0" layoutY="25.0"/>
                                <TextField fx:id="descriereTextField" layoutX="83.0" layoutY="56.0"/>
                                <DatePicker fx:id="data" layoutX="80.0" layoutY="86.0"/>
                                <Spinner fx:id="ora" editable="true" layoutX="264.0" layoutY="86.0" max="23" min="0"
                                         prefHeight="25.0" prefWidth="54.0"/>
                                <Spinner fx:id="minut" editable="true" layoutX="327.0" layoutY="86.0" max="59" min="0"
                                         prefHeight="25.0" prefWidth="53.0"/>
                                <Button fx:id="submitButton" layoutX="14.0" layoutY="123.0" mnemonicParsing="false"
                                        onAction="#submitForm" prefHeight="33.0" prefWidth="120.0" text="Submit"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <Label fx:id="numeUtilizatorLabel" alignment="CENTER" layoutX="288.0" layoutY="14.0" prefHeight="51.0"
               prefWidth="222.0" text="Label">
            <font>
                <Font size="35.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
